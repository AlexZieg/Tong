<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/defaultMargin16"
        android:textColor="@color/primaryTextColor"
        android:text="@string/hier_k_nnen_sie_ein_backup_des_gesamten_systemes_starten"/>

    <Button
        android:layout_margin="@dimen/defaultMargin16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/accent_material_dark_1"
        android:background="@android:color/transparent"
        android:text="@string/exportfilepath"
        android:id="@+id/btnExportPath"/>

    <TextView
        android:id="@+id/txtError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/defaultMargin16"
        android:textColor="@color/primaryTextColor" />
</LinearLayout>
