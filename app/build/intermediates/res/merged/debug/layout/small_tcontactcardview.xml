<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contactCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/defaultMargin5"
    android:layout_marginEnd="@dimen/defaultMargin10"
    android:layout_marginLeft="@dimen/defaultMargin10"
    android:layout_marginRight="@dimen/defaultMargin10"
    android:layout_marginStart="@dimen/defaultMargin10"
    android:layout_marginTop="@dimen/defaultMargin5"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/defaultMargin5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="22"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin5"
                android:layout_marginStart="@dimen/defaultMargin5"
                android:text="@string/givenname"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_givenNameCC"
                android:layout_width="0dp"
                android:layout_weight="28"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin5"
                android:layout_marginStart="@dimen/defaultMargin5"
                android:text="@string/bla" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="22"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin5"
                android:layout_marginStart="@dimen/defaultMargin5"
                android:text="@string/surname"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_surNameCC"
                android:layout_weight="28"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin5"
                android:layout_marginStart="@dimen/defaultMargin5"
                android:text="@string/bla" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="22"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin5"
                android:layout_marginStart="@dimen/defaultMargin5"
                android:text="@string/telefonnummer"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_telNumberCC"
                android:layout_weight="28"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin5"
                android:layout_marginStart="@dimen/defaultMargin5"
                android:text="@string/bla" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="22"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin5"
                android:layout_marginStart="@dimen/defaultMargin5"
                android:text="@string/email"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_eMailCC"
                android:layout_weight="28"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin5"
                android:layout_marginStart="@dimen/defaultMargin5"
                android:text="@string/bla" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>